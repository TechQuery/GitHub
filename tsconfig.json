{
    "compilerOptions": {
        "target": "ES6",
        "module": "ESNext",
        "lib": ["ES2022", "DOM", "DOM.Iterable"],
        "skipLibCheck": true,
        "strict": true,
        "moduleResolution": "Node",
        "jsx": "react-jsx",
        "jsxImportSource": "dom-renderer",
        "useDefineForClassFields": true
    },
    "include": ["src/**/*"]
}
